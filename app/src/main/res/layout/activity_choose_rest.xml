<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.xiaoxiguo.fastfoodrecog.ChooseRestActivity">

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/restList">

        <RadioButton android:id="@+id/rest1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rest1_name"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/rest2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rest2_name"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/rest3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rest3_name"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/rest4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rest4_name"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/rest5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rest5_name"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/rest6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rest6_name"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/rest7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rest7_name"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/rest8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rest8_name"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/rest9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rest9_name"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/rest10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rest10_name"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/rest11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rest11_name"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <Button android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
